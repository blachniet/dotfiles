# vim:filetype=gitconfig:noexpandtab
[user]
	name = Brian Lachniet
	email = blachniet@gmail.com
[core]
	editor = /usr/local/bin/vim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[alias]
	s = status --short
	co = checkout
	b = branch
	bc = branch --show-current
	lo = log --decorate --graph --date=relative --format='%C(auto)%h%d | %Cblue%ad%Creset | %Cblue%aN <%aE>%Creset%n%s%n%n%b%n'
	loa = log --decorate --graph --date=relative --all --format='%C(auto)%h%d | %Cblue%ad%Creset | %Cblue%aN <%aE>%Creset%n%s%n%n%b%n'
	lof = log --decorate --graph --format=fuller
	lofa = log --decorate --graph --format=fuller --all
	diffy = difftool --dir-diff -y
	da = diffall
	rbi = rebase --interactive --autosquash
	rbc = rebase --continue
[push]
	default         = simple
	autoSetupRemote = true # No more need to --set-upstream (-u) manually.
	followTags      = true # Always push tags too.
[pull]
	ff     = only
	rebase = true  # I'm fully in the rebase camp.
[diff]
	algorithm      = histogram
	colorMoved     = plain
	mnemonicPrefix = true
	renames        = true
[difftool]
	prompt = false
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	ff            = only
	conflictstyle = zdiff3
[include]
  path = ~/.gitconfig.local
[init]
	defaultBranch = master
[delta]
	navigate = true
[commit]
	gpgsign = true  # Set user.signingkey in ~/.gitconfig.local
	verbose = true  # Include diff it commit message editor.
[tag]
	gpgSign = true            # Set user.signingkey in ~/.gitconfig.local
	sort    = version:refname # Sort version numbers intelligently.
[column]
	ui = auto  # Show branches, tags, etc. in a column view.
[branch]
	sort = -committerdate  # Show branches with most recent activity first.
[fetch]
	prune     = true  # Always do some cleanup.
	pruneTags = true  # Cleanup tags too.
	all       = true  # Fetch from all remotes by default.
[help]
	autocorrect = prompt
[rerere]
	# Reuse Recorded Resolution
	# <https://blog.gitbutler.com/git-tips-1-theres-a-git-config-for-that/#reuse-recorded-resolution>
	enabled    = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash  = true
	updateRefs = true  # Automatically update branches that point to rebased commits.
